# Package info (Flora git)
DESCRIPTION="End to end encrypted chat room"

SORT="extra"

DEPENDENCIES=""
DOWNLOAD="true"
COMPILE="false"

INSTALLED_FILES=(/usr/local/bin/flora)
CONFIG_FILES=($HOME/.config/flora)

DOWNLOAD_SRC() {
    cd $PKG_DIR/src
    git clone https://github.com/Tina-lel/Flora
}

INSTALL_PKG() {
    chmod +x $PKG_DIR/src/Flora/flora
    mv $PKG_DIR/src/Flora/flora /usr/local/bin/
}
