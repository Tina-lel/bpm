# FUNCTIONS

check_args() {
    while [[ "$1" != "" ]]
    do
        case $1 in
            "-h" | "--help")
                echo -e "-h | --help    = This message"
                exit 0
            ;;
            *)
                echo -e "Unknown argument (-h for list)"
                exit 1
            ;;
        esac
        shift # Der kasten ist wichtig
    done
}

# PROGRAM START

check_args "$@"
