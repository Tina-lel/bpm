#!/bin/bash

# Experimental package manager written in bash - Tina_lel
# Depends on: bash, curl, tar, xz
# License: GPL v2

# FUNCTIONS

check_args() {
    while [[ "$1" != "" ]]
    do
        case $1 in
            "-h" | "--help")
                MODE=HELP
            ;;
            "-i" | "--install")
                MODE=INSTALL
            ;;
            "-l" | "--list")
                MODE=LIST
            ;;
            "-s" | "--search")
                MODE=SEARCH
            ;;
            *)
                echo -e "Unknown argument (use -h for list)"
                exit 1
            ;;
        esac
        shift # Der kasten ist wichtig
    done
}

# PROGRAM START

check_args "$@"

case $MODE in
    "HELP")
        echo -e ""
        echo -e "  -h | --help        = This message"
        echo -e "  -i | --install     = Install a package"
        echo -e "  -l | --list        = List remote Packages"
        echo -e "  -s | --search      = Search for remote Packages"
        echo -e ""
        exit 0
    ;;
    "INSTALL")
        echo "installlol"
    ;;
    "LIST")
        echo "listlol"
    ;;
    "SEARCH")
        echo "search"
    ;;
    *)
        echo -e "Requires an argument (use -h for list)"
    ;;
esac
